@model Client.Models.EnlistPurchaseModel

@{
    ViewData["Title"] = "Enlist Book Purchase";
}

<h2>Enlist Book Purchase</h2>

<form asp-action="EnlistPurchase" method="post">
    <div class="form-group">
        <label for="BookId">Book ID </label>
        <select id="BookId" name="BookId" class="form-control">
            <option value="@Model.BookId">@Model.BookId</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Count">Insert Quantity</label>
        <input type="number" id="Count" name="Count" class="form-control" value="@Model.Count" min="1" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Purchase</button>
</form>

<div>
    <a asp-action="ListAvailableBooks" class="btn btn-secondary">Back to Available Books</a>
</div>
