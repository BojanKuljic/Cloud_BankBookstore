@model List<Client.Models.BookModel>

@{
    ViewData["Title"] = "Available Books List";
}
@{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
}

<h2>Available Books List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Quantity</td>
                <td>
                    <a asp-action="EnlistPurchase" asp-route-bookId="@book.Id" class="btn btn-primary">Purchase</a>
                </td>
            </tr>
        }
    </tbody>
</table>

